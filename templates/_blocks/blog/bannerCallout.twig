{% set image = block.image.eagerly().one() ?? globalSettings.fallbackBannerImage.eagerly().one() %}
{% set headline = block.statement %}
{% set buttonUrl = block.linkButton.url ?? '/blog' %}
{% set buttonText = block.linkButton.label ?? 'Back to Blog' %}
{% set target = block.linkButton.target ?? '_self' %}
{% set calendly = block.includeCalendly ?? false %}

<section class="page-banner -animation-trigger -centered-both Px(10vw)" {% if image|length %} style="background-image: url('{{ image.url }}');" {% endif %}>
	<div class="overlay"></div>
	<div class="content small-12 cell text-center">
		<h2 class="header-one -color-white Mb(3rem)">{{ headline }}</h2>
		<div class="grid-x grid-margin-x align-center">
			<div class="shrink cell">
				<a class="button -white Mb(1rem)" href="{{ buttonUrl }}" target="{{ target }}">{{ buttonText }}</a>
				{% if calendly %}
					<script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript"></script>
					<p class="paragraph -color-white D(b) text-center">Still have questions?
						<a class="paragraph -color-white D(ib) -dec-underline" href="" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/weareone/30min'});return false;">Call
																																							Us</a>
					</p>
				{% endif %}

			</div>
		</div>
	</div>
</section>
